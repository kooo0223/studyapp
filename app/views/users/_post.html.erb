<div class="content_post">

  <% if user_signed_in? && current_user.id == post.user_id %>
    <div class="more">
      <span><%= image_tag 'dot.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '編集', edit_post_path(post.id), method: :get%>
        </li>
        <li>
          <%= link_to '削除', post_path(post.id), method: :delete %>
        </li>
      </ul>
    </div>
  <% end %>

  <div class="upper">
    <div class="post-user">
      <a href="/users/<%= post.user.id %>">
        <%= post.user.nickname %>
      </a>
    </div>

    <div class="post-date">
      <%= l post.created_at %>
    </div>
  </div>

  <div class="question">
    <div class="post-content">
      <div class="item">
        <b> <%= link_to '問題', post_path(post.id), method: :get %> </b>
        <div>
          <%= link_to post.question_text, post_path(post.id), method: :get %>
        </div>
        <%= image_tag post.question_image.variant(resize: '300x300'), class: 'image' if post.question_image.attached? %>
      </div>
    </div>
  </div>


  <div class="answer">
    <div class="post-content">
      <div class="item">
        <b> 解答 </b>
        <div>
          <%= post.answer_text %>
        </div>
        <%= image_tag post.answer_image.variant(resize: '300x300'), class: 'image' if post.answer_image.attached? %>
      </div>
    </div>
  </div>

</div>